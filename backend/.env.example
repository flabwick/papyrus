# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/clarity_db

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# AI Provider API Keys (Optional - leave blank to disable)
# Get these from the respective AI provider websites:

# OpenAI API Key (https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-...

# Anthropic API Key (https://console.anthropic.com/keys)
ANTHROPIC_API_KEY=sk-ant-...
# Google AI Studio API Key (https://makersuite.google.com/app/apikey)
GOOGLE_AI_API_KEY=...

# AI Configuration (no default model - user selects from available)
AI_GENERATION_TIMEOUT_MS=300000

# Feature Flags
AI_ENABLE_OPENAI=true
AI_ENABLE_ANTHROPIC=true
AI_ENABLE_GOOGLE=true
AI_ENABLE_STREAMING=true

# Server Configuration
PORT=3001
NODE_ENV=development